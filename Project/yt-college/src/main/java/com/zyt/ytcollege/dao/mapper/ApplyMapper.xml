<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zyt.ytcollege.dao.mapper.ApplyMapper">

    <insert id="insertApply" parameterType="ApplyDO">
        insert into apply
        values (#{id}, #{type}, #{paymentId}, #{paymentState}
                ,#{studentId}, #{studentName},#{studentAge},#{studentPhone}
                ,#{subjectId},#{subjectName},#{subjectLevel},#{subjectCost}
                ,#{realCost},#{date},#{isFirst},#{referrer},#{state}
                )
    </insert>

    <update id="updateApply" parameterType="ApplyDO">
        update apply
        <trim prefix="set" suffixOverrides=",">
            <if test="name!=null">name =#{name},</if>
            <if test="hours!=null">hours =#{hours},</if>
            <if test="applyLevel!=null">apply_level =#{applyLevel},</if>
            <if test="state!=null">state =#{state},</if>
            <if test="cost!=null">cost =#{cost},</if>
        </trim>
        where id =#{id}
    </update>

    <select id="selectAll" parameterType="ApplyDO" resultType="com.zyt.ytcollege.dao.DO.ApplyDO">
        select * from apply
        <where>
            <if test="name!=null">
                and name like concat("%",#{name},"%")
            </if>
            <if test="applyLevel!=null">
                and apply_level =#{applyLevel}
            </if>
            <if test="state!=null">
                and state =#{state}
            </if>
        </where>
    </select>

</mapper>